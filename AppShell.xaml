<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskMaster.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskMaster"
    xmlns:views="clr-namespace:TaskMaster.Views"
    Shell.FlyoutBehavior="Disabled">
  
  <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="MainPage" />
  <ShellContent ContentTemplate="{DataTemplate views:Create}" Route="Create"/>
  <ShellContent ContentTemplate="{DataTemplate views:Details}" Route="Details"/>
  
  
</Shell>
